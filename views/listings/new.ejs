<% layout("layouts/boilerplate") %>
    
    <div class="row mt-3">
        <div class="col-8 offset-2">
            
            <h3> Create New Listing</h3>
    <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3"> 
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required/>
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Title should be valid</div>
        </div>
       
        <div class="mb-3">
            <label for="description" class="description">Description</label>
            <textarea name="listing[description]"  class="form-control" required></textarea>
            <div class="valid-feedback">Discription looks good!</div>
            <div class="invalid-feedback">Please enter short description should be required</div>
        </div>
       
        <div class="mb-3"> 
            <label for="image" class="image">Upload Listing Image</label>
            <input name="listing[image]" type="file" class="form-control"  required />
       
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4"> 
                <label for="price" class="price">Price</label>
                <input name="listing[price]" placeholder="1200"  class="form-control" required/>
                <div class="valid-feedback">Price looks good!</div>
                <div class="invalid-feedback">Price should be valid</div>
            </div>
            <div class="mb-3 col-md-8"> 
                <label for="country" class="country">Country</label>
                <input name="listing[country]" placeholder="india`" type="text" class="form-control" required/>
                <div class="valid-feedback">Country looks good!</div>
                <div class="invalid-feedback">Country name should be required</div>
            </div>
        </div>
      
        
        <div class="mb-3">
            <label for="location" class="location">Location</label>
            <input name="listing[location]" placeholder="jaipur,Rajasthan" type="text" class="form-control" required/>
            <div class="valid-feedback">Location looks good!</div>
            <div class="invalid-feedback">Location should be valid</div> 
        </div>

        <div class="col-12 mb-3">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
                <label class="form-check-label" for="invalidCheck2">
                    Agree to create listing
                 </label>
            </div>
        </div>
       
         <button class="btn btn-dark add-btn mb-3"> Add </button>
       
    </form>
  
</div>
</div>
